
package controls.controls;

import java.io.*;
import java.net.*;

import controls.icontrols.*;
import model.*;

public class Handle implements IHandle {

	Socket						socket;
	IReceive					iReceive;
	private OutputStream		osw;
	private ObjectOutputStream	oos;
	private InputStream			is;
	private ObjectInputStream	ois;

	public Handle(Socket socket) {

		super();
		this.socket = socket;

		try {
			osw = socket.getOutputStream();
			oos = new ObjectOutputStream(osw);

			is = socket.getInputStream();
			ois = new ObjectInputStream(is);

		} catch(IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	@Override
	public void run() {

		try {
			while(true) {
				receiveMessage();
			}
		} catch(ClassNotFoundException | IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	@Override
	public boolean sendMessage(Message s) throws IOException {

		oos.writeObject(s);
		return false;
	}

	@Override
	public Message receiveMessage() throws IOException, ClassNotFoundException {

		return (Message)ois.readObject();

	}

}
